<style>
	.tiled-background-wrapper {
		--tile-size: 200px;
		background-color: #eeeeee;
		position: relative;
	}

	.tiled-background-pattern {
		position: absolute;
		inset: 0;
		pointer-events: none;
		z-index: 0;
		opacity: 0.2;
		background-size: 200px 200px;
		background-repeat: repeat;
	}

	/* Kitchen pattern: checkerboard using SVG pattern mask */
	.pattern-kitchen {
		background-position: 0 0;
		mask-image: url("data:image/svg+xml,%3Csvg width='400' height='400' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='kitchen-checker' x='0' y='0' width='400' height='400' patternUnits='userSpaceOnUse'%3E%3Crect x='0' y='0' width='200' height='200' fill='black'/%3E%3Crect x='400' y='0' width='200' height='200' fill='black'/%3E%3Crect x='200' y='200' width='200' height='200' fill='black'/%3E%3Crect x='600' y='200' width='200' height='200' fill='black'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='100%25' height='100%25' fill='url(%23kitchen-checker)'/%3E%3C/svg%3E");
		mask-size: 400px 400px;
		mask-repeat: repeat;
	}

	/* Bathroom pattern: opposite checkerboard using SVG pattern mask */
	.pattern-bathroom {
		background-position: 0 0;
		mask-image: url("data:image/svg+xml,%3Csvg width='400' height='400' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='bathroom-checker' x='0' y='0' width='400' height='400' patternUnits='userSpaceOnUse'%3E%3Crect x='200' y='0' width='200' height='200' fill='black'/%3E%3Crect x='600' y='0' width='200' height='200' fill='black'/%3E%3Crect x='0' y='200' width='200' height='200' fill='black'/%3E%3Crect x='400' y='200' width='200' height='200' fill='black'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='100%25' height='100%25' fill='url(%23bathroom-checker)'/%3E%3C/svg%3E");
		mask-size: 400px 400px;
		mask-repeat: repeat;
	}

	/* Ensure content stays above background */
	.tiled-background-wrapper > div:not(.tiled-background-pattern) {
		position: relative;
		z-index: 1;
	}

	.parallax-bg {
		will-change: transform;
		backface-visibility: hidden;
		-webkit-backface-visibility: hidden;
	}
</style>

<script>
	function initParallax() {
		const parallaxElements = document.querySelectorAll('.parallax-bg');
		if (parallaxElements.length === 0) return;

		function updateParallax() {
			const scrollY = window.pageYOffset || window.scrollY || document.documentElement.scrollTop;
			// Use 0.25 scroll factor for all views
			const scrollFactor = 0.25;

			parallaxElements.forEach((element) => {
				const htmlElement = element as HTMLElement;
				const wrapper = htmlElement.closest('.tiled-background-wrapper') as HTMLElement;
				if (!wrapper) return;

				// Calculate background position offset based on scroll position
				const offsetY = scrollY * scrollFactor;
				// Keep the pattern seamless by using modulo
				const tileSize = 200;
				const normalizedOffset = offsetY % tileSize;
				
				// For checkerboard patterns, preserve the X position
				const currentBgPos = window.getComputedStyle(htmlElement).backgroundPosition || '0px 0px';
				const bgPosParts = currentBgPos.split(' ');
				const bgPosX = bgPosParts[0] || '0';
				
				htmlElement.style.backgroundPosition = `${bgPosX} ${normalizedOffset}px`;
			});
		}

		// Throttle scroll events for better performance
		let ticking = false;
		function onScroll() {
			if (!ticking) {
				window.requestAnimationFrame(() => {
					updateParallax();
					ticking = false;
				});
				ticking = true;
			}
		}

		// Initial calculation
		updateParallax();

		// Listen to scroll events
		window.addEventListener('scroll', onScroll, { passive: true });
		window.addEventListener('resize', updateParallax);

		// Cleanup function
		return () => {
			window.removeEventListener('scroll', onScroll);
			window.removeEventListener('resize', updateParallax);
		};
	}

	// Initialize when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initParallax);
	} else {
		initParallax();
	}
</script>

