</style>

<script>
	function initParallax() {
		const parallaxElements = document.querySelectorAll('.parallax-bg');
		if (parallaxElements.length === 0) return;

		function updateParallax() {
			const scrollY = window.pageYOffset || window.scrollY || document.documentElement.scrollTop;
			// Use 0.25 scroll factor for all views
			const scrollFactor = 0.25;

			parallaxElements.forEach((element) => {
				const htmlElement = element as HTMLElement;
				const wrapper = htmlElement.closest('.tiled-background-wrapper') as HTMLElement;
				if (!wrapper) return;

				// Calculate background position offset based on scroll position
				const offsetY = scrollY * scrollFactor;
				// Keep the pattern seamless by using modulo
				const tileSize = 200;
				const normalizedOffset = offsetY % tileSize;
				
				// For checkerboard patterns, preserve the X position
				const currentBgPos = window.getComputedStyle(htmlElement).backgroundPosition || '0px 0px';
				const bgPosParts = currentBgPos.split(' ');
				const bgPosX = bgPosParts[0] || '0';
				
				htmlElement.style.backgroundPosition = `${bgPosX} ${normalizedOffset}px`;
			});
		}

		// Throttle scroll events for better performance
		let ticking = false;
		function onScroll() {
			if (!ticking) {
				window.requestAnimationFrame(() => {
					updateParallax();
					ticking = false;
				});
				ticking = true;
			}
		}

		// Initial calculation
		updateParallax();

		// Listen to scroll events
		window.addEventListener('scroll', onScroll, { passive: true });
		window.addEventListener('resize', updateParallax);

		// Cleanup function
		return () => {
			window.removeEventListener('scroll', onScroll);
			window.removeEventListener('resize', updateParallax);
		};
	}

	// Initialize when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initParallax);
	} else {
		initParallax();
	}
</script>
			
