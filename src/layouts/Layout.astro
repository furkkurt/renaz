---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TopContactButtons from '../components/TopContactButtons.astro';
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
	canonicalURL?: string;
}

const {
	title = "Samsun Sıhhi Tesisat | Kombi Bakım | Su Kaçağı Tespiti | Renaz Teknik",
	description = "Sıhhi Tesisat Çözümleri, Kombi Bakım ve Arıza Çözümleri, Petek Temizliği, Tıkanıklık Açma, Su Kaçağı Tespiti, Batarya-Musluk-Klozet Tamir ve Değişimi, Banyo ve Mutfak Yenileme (Tadilat). Samsun'da7/24 hizmet.",
	keywords = "Samsun tesisat, Samsun kombi bakım, su kaçağı tespiti Samsun, İlkadım tesisat, Atakum tesisatçı, Canik tesisat, Samsun banyo tadilat, mutfak tamirat Samsun, renaz teknik",
	canonicalURL = Astro.url.href,
} = Astro.props;

const siteURL = "https://renazteknik.com";
const fullTitle = title.includes("renazteknik.com") ? title : `${title} | renazteknik.com`;

// Google Ads Conversion ID and Label
const googleAdsConversionLabel = 'M2XUCOj7p8EbEOqGr4ZC';
