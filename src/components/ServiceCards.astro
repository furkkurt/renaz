---
import bg2 from '../assets/bgImages/bg2.webp';
import bg3 from '../assets/bgImages/bg3.webp';
import bg4 from '../assets/bgImages/bg4.webp';
import bg5 from '../assets/bgImages/bg5.webp';
import bg6 from '../assets/bgImages/bg6.webp';
import bg7 from '../assets/bgImages/bg7.webp';
import bg8 from '../assets/bgImages/bg8.webp';
import otherImage from '../assets/services/other.jpeg';
---

<section class="py-16 bg-[#e3decf]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Card 1: Sıhhi Tesisat Çözümleri -->
      <a
        href="/sihhi-tesisat"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg2.src}
            alt="Sıhhi Tesisat Çözümleri"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Sıhhi Tesisat Çözümleri
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Profesyonel tesisat tamiri ve bakım hizmetleri
          </p>
        </div>
      </a>

      <!-- Card 2: Kombi Bakım ve Arıza Çözümleri -->
      <a
        href="/kombi-bakim-ve-ariza-cozumleri"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg3.src}
            alt="Kombi Bakım ve Arıza Çözümleri"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Kombi Bakım ve Arıza Çözümleri
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Tüm marka kombiler için bakım ve onarım
          </p>
        </div>
      </a>

      <!-- Card 3: Petek Temizliği -->
      <a
        href="/petek-temizligi"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg4.src}
            alt="Petek Temizliği"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Petek Temizliği
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Makine destekli profesyonel petek temizliği
          </p>
        </div>
      </a>

      <!-- Card 4: Tıkanıklık Açma -->
      <a
        href="/tikaniklik-acma"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg5.src}
            alt="Tıkanıklık Açma"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Tıkanıklık Açma
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Kırmadan kameralı gider açma hizmeti
          </p>
        </div>
      </a>

      <!-- Card 5: Su Kaçağı Tespiti -->
      <a
        href="/su-kacagi-tespiti"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg6.src}
            alt="Su Kaçağı Tespiti"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Su Kaçağı Tespiti
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Akustik ve termal kamera ile nokta atışı tespit
          </p>
        </div>
      </a>

      <!-- Card 6: Batarya, Musluk, Klozet Tamir & Değişimi -->
      <a
        href="/batarya-musluk-klozet-tamir-degisimi"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg7.src}
            alt="Batarya, Musluk, Klozet Tamir & Değişimi"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Batarya, Musluk, Klozet Tamir & Değişimi
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Montaj, tamir ve değişim hizmetleri
          </p>
        </div>
      </a>

      <!-- Card 7: Banyo & Mutfak Yenileme (Tadilat) -->
      <a
        href="/banyo-mutfak-yenileme-tadilat"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={bg8.src}
            alt="Banyo & Mutfak Yenileme (Tadilat)"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Banyo & Mutfak Yenileme (Tadilat)
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Anahtar teslim yenileme çözümleri
          </p>
        </div>
      </a>

      <!-- Card 8: Diğer / İletişim -->
      <a
        href="/iletisim"
        class="group relative h-64 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
      >
        <div class="absolute inset-0">
          <img
            src={otherImage.src}
            alt="Diğer Hizmetler"
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <div class="relative z-10 h-full flex flex-col justify-end p-6 text-white">
          <h3 class="text-xl font-bold mb-2 group-hover:text-[#fad000] transition-colors" style="font-family: 'Roboto Condensed', sans-serif;">
            Diğer Hizmetler
          </h3>
          <p class="text-sm leading-relaxed opacity-90" style="font-family: 'Roboto Condensed', sans-serif;">
            Tüm tesisat ve tadilat ihtiyaçlarınız için bize ulaşın
          </p>
        </div>
      </a>
    </div>
  </div>
</section>
